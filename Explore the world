<!DOCTYPE html><html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reverse GeoBot</title>
  <style>
    body { font-family: Arial, sans-serif; max-width: 800px; margin: 2rem auto; padding: 1rem; }
    h1 { text-align: center; }
    #map { height: 500px; margin-top: 1rem; }
    .controls { display: flex; gap: 0.5rem; justify-content: center; margin-top: 1rem; }
  </style>
  <!-- Google Maps JavaScript API -->
  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY"></script>
</head>
<body>
  <h1>Reverse GeoBot</h1>
  <div class="controls">
    <input type="file" id="imageInput" accept="image/*" />
    <button id="detectBtn">Detect Location</button>
  </div>
  <div id="map"></div>  <script>
    // Replace with your Google Cloud Vision API key
    const VISION_API_KEY = 'YOUR_CLOUD_VISION_API_KEY';

    async function detectLocation() {
      const fileInput = document.getElementById('imageInput');
      if (!fileInput.files.length) {
        alert('Please select an image.');
        return;
      }
      const file = fileInput.files[0];
      const reader = new FileReader();
      reader.onload = async () => {
        const base64 = reader.result.split(',')[1];
        // Call Cloud Vision for landmark detection
        const response = await fetch(
          `https://vision.googleapis.com/v1/images:annotate?key=${VISION_API_KEY}`,
          {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              requests: [{
                image: { content: base64 },
                features: [{ type: 'LANDMARK_DETECTION', maxResults: 1 }]
              }]
            })
          }
        );
        const data = await response.json();
        if (data.responses?.[0]?.landmarkAnnotations?.length) {
          const landmark = data.responses[0].landmarkAnnotations[0];
          const { latLng } = landmark.locations[0];
          initMap(latLng.latitude, latLng.longitude, landmark.description);
        } else {
          alert('No landmark detected. Try another image.');
        }
      };
      reader.readAsDataURL(file);
    }

    function initMap(lat, lng, title = '') {
      const map = new google.maps.Map(document.getElementById('map'), {
        center: { lat, lng },
        zoom: 15
      });
      new google.maps.Marker({ position: { lat, lng }, map, title });
    }

    document.getElementById('detectBtn').addEventListener('click', detectLocation);
  </script></body>
</html>
